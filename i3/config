# Apply colors to i3
client.background $bg

# Border colors
client.focused          $accent $accent $fg $accent $accent
client.focused_inactive $color8 $color8 $fg $color8 $color8
client.unfocused        $color8 $color8 $fg $color8 $color8
client.urgent           $color9 $color9 $fg $color9 $color9
client.placeholder      $bg $bg $fg $bg $bg
